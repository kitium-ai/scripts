{
  "name": "@kitiumai/scripts",
  "version": "2.1.0",
  "description": "A comprehensive collection of reusable scripts and utilities for the Kitium AI organization",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/scripts.git"
  },
  "homepage": "https://github.com/kitium-ai/scripts#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/scripts/issues"
  },
  "author": "Kitium AI",
  "keywords": [
    "scripts",
    "utilities",
    "build",
    "development",
    "tooling",
    "automation",
    "github",
    "security",
    "npm",
    "token",
    "npmrc",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "deepseek",
    "secrets",
    "cli",
    "devops",
    "release",
    "config",
    "setup",
    "kitiumai",
    "kitium"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "setup-github-security": "./bin/github-security/setup-github-security",
    "configure-github-branch-protection": "./bin/github-security/configure-github-branch-protection",
    "set-npm-token": "./bin/set-npm-token.js",
    "add-ai-tokens": "./bin/add-ai-tokens.js",
    "add-npmrc": "./bin/add-npmrc.js",
    "ensure-changeset": "./bin/ensure-changeset.js",
    "fix-deprecated-deps": "./bin/fix-deprecated-deps.js",
    "generate-sbom": "./bin/generate-sbom.js",
    "kitium-security-check": "./bin/security-check.js",
    "kitium-license-check": "./bin/license-compliance.js",
    "sign-artifact": "./bin/sign-artifact.js",
    "license-check": "./bin/license-check.js",
    "validate-configs": "./dist/validate-configs.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./build": {
      "import": "./dist/build/index.js",
      "require": "./dist/build/index.js",
      "types": "./dist/build/index.d.ts"
    },
    "./test": {
      "import": "./dist/test/index.js",
      "require": "./dist/test/index.js",
      "types": "./dist/test/index.d.ts"
    },
    "./lint": {
      "import": "./dist/lint/index.js",
      "require": "./dist/lint/index.js",
      "types": "./dist/lint/index.d.ts"
    },
    "./git": {
      "import": "./dist/git/index.js",
      "require": "./dist/git/index.js",
      "types": "./dist/git/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./deps": {
      "import": "./dist/deps/index.js",
      "require": "./dist/deps/index.js",
      "types": "./dist/deps/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "require": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    },
    "./dx": {
      "import": "./dist/dx/index.js",
      "require": "./dist/dx/index.js",
      "types": "./dist/dx/index.d.ts"
    },
    "./release": {
      "import": "./dist/release/index.js",
      "require": "./dist/release/index.js",
      "types": "./dist/release/index.d.ts"
    },
    "./observability": {
      "import": "./dist/observability/index.js",
      "require": "./dist/observability/index.js",
      "types": "./dist/observability/index.d.ts"
    },
    "./operations": {
      "import": "./dist/operations/index.js",
      "require": "./dist/operations/index.js",
      "types": "./dist/operations/index.d.ts"
    },
    "./automation": {
      "import": "./dist/automation/index.js",
      "require": "./dist/automation/index.js",
      "types": "./dist/automation/index.d.ts"
    },
    "./ai": {
      "import": "./dist/ai/index.js",
      "require": "./dist/ai/index.js",
      "types": "./dist/ai/index.d.ts"
    },
    "./ops": {
      "import": "./dist/ops/index.js",
      "require": "./dist/ops/index.js",
      "types": "./dist/ops/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "dev": "tsc --watch",
    "clean": "rm -rf dist node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky install || true",
    "prepublishOnly": "npm run build && npm run lint && npm run type-check",
    "publish:set-token": "node bin/set-npm-token.js",
    "publish:setup": "node bin/set-npm-token.js",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || (echo 'Error: Not logged in to npm. Set NPM_TOKEN or run: npm login' && exit 1)",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:dry-run": "pnpm run publish:check && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release:tag": "echo 'Use GitHub Actions workflow: Tag @kitiumai/scripts Release'",
    "release:manual": "echo '⚠️  Manual release - ensure you have run: git tag @kitiumai/scripts@<version> && git push origin @kitiumai/scripts@<version>' && pnpm run publish:package",
    "changeset": "node bin/ensure-changeset.js && changeset",
    "changeset:init": "node bin/ensure-changeset.js"
  },
  "dependencies": {
    "@kitiumai/utils-ts": "file:../../packages/utils/@kitiumai/utils-ts",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.2"
  },
  "peerDependencies": {
    "@kitiumai/logger": "*"
  },
  "peerDependenciesMeta": {
    "@kitiumai/logger": {
      "optional": true
    }
  },
  "devDependencies": {
    "@kitiumai/lint": "file:../../packages/dev-tools/@kitiumai/lint",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "husky": "^9.0.11",
    "prettier": "^3.6.2",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  }
}
